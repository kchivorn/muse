.post
  .post_image
    %p= link_to image_tag(post.image.url(:thumb)), post
  .post_content
    .title
      %h2= link_to post.title, post
    .data.clearfix
      %p.username
        Shared by
        = post.user.name
      %p.buttons
        %span
          %i.fa.fa-comments-o
          = post.comments.count
        %span
          %i.fa.fa-thumbs-o-up
          = post.get_likes.size


